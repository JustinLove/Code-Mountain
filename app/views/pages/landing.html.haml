#splash.container
  %img{:alt => "Welcome to Code Mountain", :src => "images/landing_page_3.png"}/
  =form_for @subscriber, :url => { :action => "create_subscriber" }, :html => {:class => 'landing-form'} do |f|
    %h2 Ready to Climb?
    = f.label :name
    = f.text_field :name
    = f.label :email
    = f.text_field :email
    = f.submit ""
    - if @subscriber.errors.any?
      .errors
        Whoops! Some problems:
        %ul
        - @subscriber.errors.full_messages.each do |msg| 
          %li.error_msg
            =msg
      
